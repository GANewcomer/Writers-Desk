<UserControl x:Class="WritersDesk.Views.Controls.TaskItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WritersDesk.Views.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignWidth="500"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBox adonisExtensions:WatermarkExtension.Watermark="Name"
                 AcceptsReturn="True"
                 Text="{Binding Name}"
                 TextWrapping="Wrap" />

        <TextBox Grid.Row="1"
                 adonisExtensions:WatermarkExtension.Watermark="Description"
                 AcceptsReturn="True"
                 Text="{Binding Description}"
                 TextWrapping="Wrap" />

    </Grid>
</UserControl>
